<hr>
<div class="cocntainer mt-5">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-6">
      <span style="font-size:35px">商品一覧</span>
      <span style="font-size:25px">(全<%= @products.count %>件)</span>
    </div>
  </div>

  <div class="row mt-3">
    <% @products.each do |products| %>
      <div class="col-3">
        <%= link_to product_path(products) do %>
        <%= products.get_product_image size:"240x180"%>
        <% end %>
        <%= products.name %>
        <%= products.price %>
      </div>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-5 mx-auto">
      <%= paginate @products %>
    </div>
  </div>
</div>