<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>商品詳細</h1>

      <!--商品詳細データ-->
      <div class="row">
        <!--商品画像-->
        <div>画像</div>
        <!--商品データ-->
        <div>
          <table class='table'>
            <tr>
              <td>商品名</td>
              <td><%= @product.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @product.name %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @product.name %></td>
            </tr>
            <tr>
              <td>税込価格<br />（税抜価格）</td>
              <td>（<%= @product.price.to_s(:delimited) %>）円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @product.is_active %>
                  販売中
                <% else %>
                  販売停止中
                <% end %>
              </td>
            </tr>
          </table>
          <button type="button" class="btn btn-success">編集する</button>
        </div>

      </div>
    </div>
  </div>
</div>