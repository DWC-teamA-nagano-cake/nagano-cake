<div class="container">
  <!--<div class="row">-->
    <div class="mt-4">
      <h2>商品詳細</h2>
      <!--商品詳細データ-->
      <div class="row mt-4">
        <!--商品画像-->
        <div class="col-md-4">
          <%= image_tag @product.product_image, size:"320x240" %>
        </div>
        <div class="col-md-7">
          <table class='table table-borderless'>
            <tr>
              <td>商品名</td>
              <td><%= @product.name %></td >
            </tr>
            <tr>
              <td class="align-middle">商品説明</td>
              <td><%= @product.description %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @product.genre.genre %></td>
            </tr>
            <tr>
              <td> 税込価格<br />(税抜価格)</td>
              <td class="align-middle"><%= (@product.price*1.1).round.to_s(:delimited) %>（<%= @product.price.to_s(:delimited) %>）円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
                <% if @product.is_active %>
                  <P class="text-success">販売中</P>
                <% else %>
                  販売停止中
                <% end %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= link_to "編集する", edit_admin_product_path(@product.id) ,class: "btn btn-success", 'data-turbolinks': false %></td>
            </tr>
          </table>
        </div>

      </div>
    </div>
  <!--</div>-->
</div>