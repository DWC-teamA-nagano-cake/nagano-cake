<div class="row d-flex mt-5 ">
  <div class="col-1"></div>
    <div class="col-2">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <%= render "public/products/genres_search", genres: @genres %>
        </tbody>
      </table>
    </div>
  
    <div class="col-9">
      <div class="d-flex">
        <p style="font-size:35px"><%= "#{@q.name_cont}" %>一覧</p>
        <p style="font-size:25px; line-height: 2;">(全<%= @product.count %>件)</p>
      </div>
 
      <div class="d-flex flex-wrap items_width">
        <% @product.each do |products| %>
          <div class="mx-3 my-3">
            <%= link_to product_path(products) do %>
            <%= image_tag products.get_product_image, size: "200x160" %>
            <% end %><br>
            <%= products.name %><br>
            ¥<%= number_with_delimiter products.price %>
          </div>
        <% end %>
      </div>

      <div class="row justify-content-center my-4">
        <%= paginate @products, theme: 'bootstrap-5' %>
      </div>
    </div>
</div>