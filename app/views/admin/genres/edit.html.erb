<div class="container">
  <div class="row">
    <div class="col-md-8">

      <h1>ジャンル編集</h1>
      <div>
        <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch, local:true do |f| %>
          <%= f.label :genre, 'ジャンル名' %>
          <%= f.text_field :genre %>
          <%= f.submit '変更を保存', class:"btn btn-sm btn-success" %>
        <% end %>
      </div>

    </div>
  </div>
</div>