<div class="container">
  <div class="row">
    <div class="col-lg-8 my-3">
      <h3><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h3>
      <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <table class="table table-borderless shadow-lg">
        <tbody>
          <tr>
            <td>会員id</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, class:'form-control' %></td>
            <td><%= f.text_field :first_name, class:'form-control' %></td>
          </tr>
          <tr>
    　　　　<td>フリガナ</td>
    　　　　<td><%= f.text_field :last_name_kana, class:'form-control' %></td>
    　　　　<td><%= f.text_field :first_name_kana, class:'form-control' %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :post_code, class:'form-control' %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, class:'form-control' %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :phone_number, class:'form-control' %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, class:'form-control' %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
             <%= f.radio_button :is_deleted, false %>
             <%= f.label :is_deleted, "有効", value: false %>
             <%= f.radio_button :is_deleted, true %>
             <%= f.label :is_deleted, "退会", value: true %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="form-group col-md-2 ml-auto p-0">
        <%= f.submit "変更を保存", class:'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
