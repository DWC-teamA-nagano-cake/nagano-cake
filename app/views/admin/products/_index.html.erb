<table class='table'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <!--ここからデータ読み込み-->
    <% products.each do |product| %>
    <tr>
      <!--商品ID-->
      <td class="align-middle"><p class="m-0"><%= product.id %></p></td>
      <!--商品名-->
      <td class="align-middle"><p class="m-0"><%= link_to product.name, admin_product_path(product.id) %></p></td>
      <!--税抜価格-->
      <td class="align-middle"><p class="m-0"><%= product.price %></p></td>
      <!--ジャンル-->
      <td class="align-middle"><p class="m-0"><%= product.genre.genre %></p></td>
      <!--販売ステータス-->
      <td class="align-middle">
        <% if product.is_active %>
          <P class="text-success m-0 font-weight-bold">販売中</P>
        <% else %>
          <p class="m-0">販売停止中</p>
        <% end %>
      </td>
    </tr>
    <% end %>
    <!--ここまで-->
  </tbody>
</table>

<!--ページネーション～kaminari～-->
<div class="col-2 offset-5">
  <%= paginate @products %>
</div>