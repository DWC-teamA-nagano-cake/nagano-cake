<%= form_with model:product, local:true do |f| %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control product_image' %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control product_name' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control product_description' %>
  </div>
  <div class="form-group">
    <%= f.label :product_genre_id %>
    <%= f.text_area :product_genre_id, class: 'form-control product_product_genre_id' %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control product_:price' %>
  </div>
  <div class="form-group">
    <%= f.label :is_active %>
    <%= f.radio_button :is_active, 'true', class: 'form-control product_is_active' %>
    <%= f.radio_button :is_active, '', class: 'form-control product_is_active' %>
  </div>
  <div class="form-group">
    <%= f.submit '新規投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
  </div>
<% end %>