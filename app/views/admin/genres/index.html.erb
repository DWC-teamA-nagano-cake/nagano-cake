<div class="container">
  <div class="row">
    <div class="col-md-8">

      <h1>ジャンル一覧・追加</h1>

      <!--ジャンル名登録フォーム-->
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        <%= f.label :genre, 'ジャンル名' %>
        <%= f.text_field :genre %>
        <%= f.submit '新規投稿', class:"btn btn-sm btn-success" %>
      <% end %>

      <!--既に登録されているジャンルのリスト-->
      <div>
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>