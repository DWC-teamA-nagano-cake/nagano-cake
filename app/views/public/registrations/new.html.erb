<div class="container mt-5">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <p style="background-color:#EEEEEE; font-size:21px; text-align:center;">新規会員登録</p>
    </div>
  </div>

    <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row mt-4">
      <div class="col-2">
        <span>名前</span>
      </div>
      <div class="col-1">
        <%= f.label :"(姓)　" %>
      </div>
      <div class="col-3">
         <%= f.text_field :last_name, autofocus: true, class: "name", placeholder: "令和" %>
      </div>
      <div class="col-1">
        <%= f.label :"(名)　" %>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name, autofocus: true, class: "name", placeholder: "道子" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-2">
        <span>フリガナ</span>
      </div>
      <div class="col-1">
        <%= f.label :"(セイ)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :last_name_kana, autofocus: true, class: "name", placeholder: "レイワ" %>
      </div>
      <div class="col-1">
        <%= f.label :"(メイ)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name_kana, autofocus: true, class: "name", placeholder: "ミチコ" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :"メールアドレス" %>
      </div>
      <div class="col-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :"郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :post_code, autofocus: true, class: "name", placeholder: "0000000" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :"住所" %>
      </div>
      <div class="col-8">
        <%= f.text_field :address, autofocus: true, class: "name", size: "65x5", placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :"電話番号(ハイフンなし)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :phone_number, autofocus: true, class: "name", placeholder: "0000000000" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :"パスワード(6文字以上)" %>
      </div>
      <div class="col-3">
        <% if @minimum_password_length %>
        <!--<em>( characters minimum)</em>-->
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-3">
        <%= f.label :"パスワード(確認用)" %>
      </div>
      <div class="col-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2">
        <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
      </div>
    </div>
    <% end %>

    <div class="row mt-5">
      <div class="col-1"></div>
      <div class="col-3.5">
        <p style="background-color:#EEEEEE; font-size:21px; text-align:center;">既に登録済みの方</p>
      </div>
    </div>

    <div class="row mt-2 mb-4">
      <div class="col-1"></div>
      <div class="col-4">
        <%= render "public/shared/links" %>からログインしてください。
      </div>
    </div>
</div>