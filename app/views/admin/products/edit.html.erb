<div class="container">
  <div class="row mt-4">

    <h2>商品編集</h2>
    <div class="col-md-8 mt-4">
      <table class="table table-borderless">
        <%= form_with model: @product, url: admin_product_path(@product.id), method: :patch, local:true do |f| %>
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :product_image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name, size: "30" %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :description, size: "32x5" %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :genre, include_blank: "選択してください" %></td>
          </tr>
          <tr>
            <td>税抜き価格</td>
            <td><%= f.text_field :price %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%= f.radio_button :is_active, 'true' %>販売中
              <%= f.radio_button :is_active, 'false' %>販売停止中
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
          </tr>
        <% end %>
        </table>
      </div>

      <!-- %= render 'form', product: @product %-->
    </div>
  </div>
</div>