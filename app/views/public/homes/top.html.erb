<hr>
<div class="cocntainer mt-5">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <%= render "public/products/genres_search", genres: @genres %>
        </tbody>
      </table>
    </div>

    <div class="col-1"></div>
    <div class="col-8">
      <%= image_tag "top_image.jpg", style: "width: 680px; height: 360px; position: relative;" %>
      <p style="position:absolute; top:120px; left:135px; background-color:rgba(0,0,0,0.3); color:#FFF; font-size:20px;">
        ようこそ、ながのCAKEへ！<br>
        このサイトは、ケーキ販売のECサイトになります。<br>
        会員でない方も商品の閲覧はできますが、<br>
        購入には会員登録が必要になります。
      </p>
      </div>
    </div>
 </div>

  <div class="row mt-5">
     <div class="col-4"></div>
     <div class="col-8">
       <h2>新着商品</h2>
        <% @products.each do |products| %>
          <div>
            <%= products.get_producut_image %>
          </div>
          <div>
            <%= products.name %>
          </div>
          <div>
            ¥<%= products.price %>
          </div>
        <% end %>
      </div>
  </div>

    <div class="row my-3">
      <div class="col-10"></div>
      <div class="col-2">
        <%= link_to "全ての商品を見る>", products_path %>
      </div>
    </div>
  </div>
</div>
