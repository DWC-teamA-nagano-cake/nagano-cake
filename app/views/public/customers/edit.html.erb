<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="bg-secondary">マイページ</h2>
      <table class="table table-borderless">
        <%= form_with model:@customer,url:customers_information_path,method: :patch do |f| %>
        <tr>
          <th>氏名</th>
          <th><%= f.text_field:last_name %> <%= f.text_field:first_name %></th>
        </tr>
        <tr>
          <th>カナ</th>
          <th><%= f.text_field:last_name_kana %> <%= f.text_field:first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= f.text_field:post_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field:address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= f.text_field:phone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= f.text_field:email %></th>
        </tr>
        <tr>
          <th><%= f.submit "編集内容を保存",class:"btn btn-lg btn-success" %></th>
          <th><%= link_to "退会する",unsubscribe_path,class:"btn btn-lg btn-danger" %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>