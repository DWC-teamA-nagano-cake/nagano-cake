<hr>
<div class="container mt-5">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-4">
      <p style="background-color:#EEEEEE; font-size:20px; text-align:center;">ショッピングカート</p>
    </div>
    <div class="col-3">
      <% unless @cart_items.empty? %>
        <%= link_to "カートを空にする", cart_item_destroy_all_path, method: :delete, class: "btn btn_denger" %>
      <% end %>
    </div>
  </div>

  <% unless @cart_items.empty? %>
    <table class="table table-bordered">
      <thead class="table thead-secondary">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.product.get_product_image, size:"60x40" %>
            <%= cart_item.product.name %>
          </td>
          <td>
            <%= number_with_delimiter cart_item.product.with_tax_price %>
          </td>
          <td>
            <% form_with model: cart_item do |f| %>
            <%= f.select :quantity, quantity_options, {selected: cart_item.quantity}, {class: "select"} %>
            <%= f.submit "変更", "btn btn-success" %>
            <% end %>
          </td>
          <td>
            <%= number_with_delimiter cart_item.product.sub_total %>
          </td>
          <td>
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-denger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <div class="col-1.5"></div>
      <div class="col-3">
        <%= link_to "買い物を続ける", root_path, class: "btn btn_primary" %>
      </div>
      <div class="col-3">
        <table class="table table_bordered">
          <tbody>
            <tr>
              <td class="table_secondary">合計金額</td>
              <td>
                <%= number_with_delimiter @total_price %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-3 mx-auto">
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
      </div>
    </div>

  <% else %>

    <div class="mx-auto">
      ショッピングカートは空です。
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>