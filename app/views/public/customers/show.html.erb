<div class="container">
  <h2 class="bg-light">マイページ</h2>
  <div class="row">
    <div class="col">
      <h4>登録情報
        <%= link_to "編集する",customers_information_edit_path(current_customer),class:"btn btn-lg btn-success" %>
      </h4>
      <table class="table table-bordered">
        <tr>
          <th class="table-active">氏名</th>
          <th><%= @customer.last_name %> <%= @customer.first_name %></th>
        </tr>
        <tr>
          <th class="table-active">カナ</th>
          <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th>
          <th><%= @customer.post_code %></th>
        </tr>
        <tr>
          <th class="table-active">住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th class="table-active">電話番号</th>
          <th><%= @customer.phone_number %></th>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
      </table>
      <h4>配送先
        <%= link_to "一覧を見る",shipping_addresses_path,class:"btn btn-lg btn-primary" %>
      </h4>
      <h4>注文履歴
        <%= link_to "一覧を見る",orders_path,class:"btn btn-lg btn-primary" %>
      </h4>
    </div>
  </div>
</div>