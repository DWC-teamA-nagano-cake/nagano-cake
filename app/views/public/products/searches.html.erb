<hr>
<div class="cocntainer mt-5">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <%= render "public/products/genres_search", genres: @genres %>
        </tbody>
      </table>
    </div>

    <div class="col-1"></div>
    <div class="col-5">
      <span style="font-size:35px"><%= @search_name %>一覧</span>
      <span style="font-size:25px">(全<%= @products_all.count %>件)</span>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-4"></div>
    <% @products_all.each do |products| %>
      <div class="col-3">
        <%= link_to product_path(products) do %>
        <%= products.get_product_image size:"240x180"%>
        <% end %>
        <%= products.name %>
        <%= products.price %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-4"></div>
    <div class="col-5 mx-auto">
      <%= paginate @products %>
    </div>
  </div>
</div>