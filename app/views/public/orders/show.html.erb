<div class="container mb-3 mx-auto">
  <h4 class="px-3 my-3 text-center col-md-2">注文履歴詳細</h2>
  <div class="row">
    <div class="col-8">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <th><%= l @order.created_at, format: :short %></th>
        </tr>
        <tr>
          <th>配送先</th>
          <th><%= @order.address_display %></th>
        </tr>
        <tr>
          <th>支払い方法</th>
          <th><%= @order.method_of_payment_i18n %></th>
        </tr>
        <tr>
          <th>ステータス</th>
          <th><%= @order.order_status_i18n %></th>
        </tr>
      </table>
      <p>注文内容</p>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込み）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.product.name %></td>
              <td><%= order_detail.product.with_tax_price %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= order_detail.sub_total %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <p>請求情報</p>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <th><%= @total_price %></th>
        </tr>
        <tr>
          <th>配送料</th>
          <th><%= @order.postage %></th>
        </tr>
        <tr>
          <th>ご請求額</th>
          <th><%= @order.total_payment %></th>
        </tr>
      </table>
    </div>
  </div>
</div>