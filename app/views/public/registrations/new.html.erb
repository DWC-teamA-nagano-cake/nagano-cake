<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>
  
  <div class="row">
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
    <div class="field">
      <div class="col">
  　     <span>名前</span>
  　   </div>
  　   <div class="col">
        <%= f.label :"(姓)" %>
        <%= f.text_field :last_name, autofocus: true, class: "name", placeholder: "令和" %>
      </div>
      <div class="col">
          <%= f.label :"(名)" %>
          <%= f.text_field :first_name, autofocus: true, class: "name", placeholder: "道子" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    
    <div class="field">
      <span>フリガナ</span>
      <%= f.label :"(セイ)" %>
      <%= f.text_field :last_name_kana, autofocus: true, class: "name", placeholder: "レイワ" %>
  
      <%= f.label :"(メイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true, class: "name", placeholder: "ミチコ" %>
    </div>
  </div>
  
  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code, autofocus: true, class: "name", placeholder: "0000000" %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true, class: "name", size: "70x5", placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

   <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number, autofocus: true, class: "name", placeholder: "0000000000" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <!--<em>( characters minimum)</em>-->
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
  <div>
    <%= render "public/shared/links" %>からログインしてください。
  </div>
  
</div>